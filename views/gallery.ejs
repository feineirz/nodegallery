<%- include('./templates/header.ejs') %>

<link rel="stylesheet" href="/css/gallery.css">

<%- include('./templates/joint.ejs') %>

<header></header>
<nav>
	<%- include('./templates/nav.ejs') %>
</nav>
<main>
	
	<div class="container">
		<div class="overlay-container hide-overlay">
			<div class="overlay-content">
				<p class="overlay-title"></p>
				<img src="" alt="" class="overlay-image">				
			</div>
		</div>
		<section>
			<h1>IMAGE GALLERY DEMO</h1>
			<form action="" method="POST" enctype="multipart/form-data">
				<input type="file" name="gallery" id="gallery" multiple>
				<input class="btn btn-primary" type="submit" value="Upload">
			</form>
		</section>
		<hr>
		<section>
			<div class="row">
				<% data.forEach(function(item) { %>
				<div class="col col-12 col-sm-6 col-md-4 col-lg-3 mt-2 mb-2">
					<div class="image-container">
						<img class="gallery-image" src="<%= item.path %>" id="<%= item._id %>" alt="<%= item._id %>">							
					</div>					
				</div>		
				<% }) %>	
			</div>

		</section>
	</div>

</main>

<script src="/js/gallery.js"></script>

<%- include('./templates/footer.ejs') %>